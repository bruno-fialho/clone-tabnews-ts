{
  "name": "clone-tabnews-ts",
  "version": "1.0.0",
  "description": "TabNews clone from [curso.dev](http://curso.dev)! ðŸ“°",
  "main": "index.ts",
  "scripts": {
    "dev": "pnpm services:up && pnpm wait-for-postgres && pnpm migration:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint:eslint:check": "next lint --dir .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "migration:create": "node-pg-migrate -m src/infra/migrations create",
    "migration:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m src/infra/migrations --envPath .env.development down",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "test": "pnpm services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "wait-for-postgres": "tsx src/infra/scripts/wait-for-postgres.ts",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "Bruno Fialho",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^12.0.3",
    "next": "14.2.33",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.8.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.3.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "husky": "^9.1.4",
    "jest": "^29.6.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}
